{
  "compileOnSave": false,
  "compilerOptions": {
    // "outDir": "./dist/out-tsc",
    "baseUrl": "./server",
    "sourceMap": true,
    "declaration": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "module": "commonjs",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib":[
      "es7",
      "dom"
    ]
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "assets"
  ]
}
